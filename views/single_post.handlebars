{{!--This file allows the user to add a comment to an existing blog post. This will display the blog post chosen and any preexisting comments, provide a space for the user to add text, and a submit button --}}

{{!-- Post the chosen blog --}}
{{!-- Only allow comments if the user is logged in --}}
{{#if loggedIn}}
<div>
    <h2>{{!--Title of the blog--}}</h2>
    <form>
        <label>Comment</label>
        <input type="text" />

        <button type="submit">Submit</button>
    </form>
</div>
{{/if}}

{{!-- Post the preexisting comments --}}
{{#if loggedIn}}
<script src="{{!--file path to javascript/comments.js--}}"></script>
{{/if}}